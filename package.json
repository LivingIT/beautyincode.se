{
  "name": "beautyincode.se",
  "version": "1.0.1",
  "description": "Web site for Beauty In Code",
  "main": "index.html",
  "scripts": {
    "prepare": "husky install",
    "start": "nodemon",
    "jekyll": "bundle exec jekyll serve --drafts",
    "uglify:css": "foreach -g 'dist/css/*.css' -x 'uglifycss #{path} --output #{path}'",
    "uglify:js": "foreach -g 'dist/js/*.js' -x 'uglifyjs #{path} --output #{path}'",
    "hash:css": "hashmark -l 8 css/*.css './dist/css/{name}-{hash}.css'",
    "posthash:css": "npm run uglify:css",
    "hash:js": "hashmark -l 8 js/*.js './dist/js/{name}-{hash}.js'",
    "posthash:js": "npm run uglify:js",
    "svg": "svg-sprite -C svg-sprite.config.json --dest ./images svg/*.svg",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:js": "eslint js/*.js",
    "lint:css": "stylelint ./css/*.css",
    "predeploy": "rm -rf dist && mkdir -p dist/css dist/js",
    "deploy": "npm run hash:css && npm run hash:js && npm run svg"
  },
  "author": "Fredrik Frodlund",
  "license": "UNLICENSED",
  "dependencies": {
    "eslint": "^8.0.0",
    "foreach-cli": "1.8.1",
    "hashmark": "^5.0.0",
    "stylelint-color-format": "^1.0.0",
    "svg-sprite": "^2.0.0",
    "uglify-es": "^3.0.28",
    "uglifycss": "^0.0.29"
  },
  "devDependencies": {
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "2.8.3",
    "stylelint": "^15.0.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-prettier": "^3.0.0"
  },
  "lint-staged": {
    "*.css": [
      "stylelint --fix css/*.css",
      "stylelint css/*.css"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "svg/*"
    ],
    "exec": "npm run svg"
  }
}
